<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random Ten Jokes</title>
    <link rel="stylesheet" href="../stylesheets/random_ten_jokes.css">
</head>
<body>
    <button class="refresh-button" onclick="window.location.reload();">Refresh</button>
    <div class="container">
        <h1 class="heading">Random Ten Jokes</h1>
        <div class="joke-grid">
            <% jokes.forEach((joke, index) => { %>
                <div class="joke-box">
                    <div class="section">
                        <h2>Type</h2>
                        <p class="type"><%= joke.type %></p>
                    </div>
                    <div class="section">
                        <h2>Setup</h2>
                        <p class="setup"><%= joke.setup %></p>
                    </div>
                    <div class="section">
                        <h2>Punchline</h2>
                        <p class="punchline"><%= joke.punchline %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
